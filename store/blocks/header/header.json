{
  "header": {
    "blocks": [
      "header-layout.desktop",
      "header-layout.mobile"
    ]
  },
  "header.full": {
    "blocks": [
      "header-layout.desktop",
      "header-layout.mobile"
    ]
  },
  "header-layout.desktop": {
    "children": [
      "header-row#2-desktop",
      "header-row#3-desktop"
    ]
  },

  "header-row#1-desktop": {
    "children": [
      "rich-text#notification.bar"
    ],
    "props": {
      "fullWidth": "true",
      "inverted":"true"
    }
  },
  "rich-text#notification.bar": {
    "props": {
      "text": "**Estamos realizando entregas normalmente!**",
      "textColor": "c-on-emphasis",
      "blockClass":"notification-bar"
    }
  },
  "header-row#2-desktop": {
    "children": [
      "logo#desktop",
      "header-spacer",
      "search-bar",
      "header-spacer",
      "rich-text#notification.bar",
      "login",
      "minicart.v2"
    ],
    "props": {
      "sticky": true,
      "blockClass": "main-header"
    }
  },
  "header-row#3-desktop": {
    "children": [
      "vtex.menu@2.x:menu#category-menu"
    ],
    "props": {
      "sticky": true,
      "blockClass": "main-menu"
    }
  },
  "logo#desktop": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "https://belavidanatural.vteximg.com.br/arquivos/belavidanatural.png",
      "width": "132"
    }
  },

  "header-layout.mobile": {
    "children": [
      "header-row#1-mobile",
      "header-row#2-mobile"
    ]
  },
  "header-row#1-mobile": {
    "children": [
      "drawer",
      "header-spacer",
      "logo#mobile",
      "header-spacer",
      "login",
      "minicart.v2"
    ],
    "props": {
      "sticky": true,
      "blockClass": "main-header-mobile"
    }
  },
  "drawer": {
    "children": [
      "vtex.menu@2.x:menu#category-menu-mobile"
    ]
  },

  "logo#mobile": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "https://belavidanatural.vteximg.com.br/arquivos/belavidanatural.png",
      "width": "120"
    }
  },
  "header-row#2-mobile": {
    "children": [
      "search-bar"
    ],
    "props": {
      "sticky": true
    }
  },

  "search-bar": {
    "blocks": ["autocomplete-result-list.v2"],
    "props": {
      "openAutocompleteOnFocus": true
    }
  }
}